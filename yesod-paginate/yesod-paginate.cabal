  build-depends: base  >= 4    && < 5
               , text  >= 0.11 && < 0.12
               , yesod >= 0.9  && < 1.0

  ghc-options: -Wall
  
source-repository head
  type:         git
  location:     git://github.com/pbrisbin/yesod-goodies.git
